<!DOCTYPE html>
@{
  Layout = "_Layout";
}

<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <script src="/scripts/jquery-3.3.1.js"></script>
    <title>You lost on day @Model["day"]</title>
  </head>
  <body>
    <div class="losegame-container">
      <div class="row">
        <br>
        <h2> GAME OVER!!, @Model["currentPlayer"].GetName(). You lost on day @Model["day"].<br>Money: @Model["currentPlayer"].GetMoney()<br>Health: @Model["currentPlayer"].GetHealth()<br>Mood: @Model["currentPlayer"].GetMood()<br><img class="gameover" src="/img/gameover.png"><br><a href="/player">New Game</a></h2>
      </div>
    </div>

  </body>
</html>
