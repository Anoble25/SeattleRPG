<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Seattle RPG</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@3.5.2/animate.min.css"> -->
    <script src="/scripts/jquery-3.3.1.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="col-md-12">
          <h1>Welcome to our RPG game</h1>
      </div>

      <div id="game-window">
        <div class="row">
          <div class="col-md-6 scenario-image">
            <img class= "animated zoomIn" src="/img/@Model["selectedScenario"].GetImgSrc()">
          </div>
            <div class= "col-md-4 player-stats">

              <h1 class ="day">DAY @Model["day"]<hr></h1>
              <h2 class ="health animated pulse">HP: @Model["currentPlayer"].GetHealth()
              <span class ="animated fadeOutUp changes"> @Model["healthChange"]</span></h2><br>

              <h2 class ="money animated pulse">Money: @Model["currentPlayer"].GetMoney()
              <span class="animated fadeOutUp changes">@Model["moneyChange"]</span> </h2><br>

              <h2 class ="mood animated pulse">Mood: @Model["currentPlayer"].GetMood()
              <span class="animated fadeOutUp changes"> @Model["moodChange"]</span> <br>

              <h4 class ="name animated pulse">@Model["currentPlayer"].GetName()</h4>
              <hr>
            </div>
          </div>
          <br>
          <div class="col-md-12 scenario-box">
            <h2 class="animated flipInX">@Model["selectedScenario"].GetScenarioName()<hr></h2>
            <p>@Model["selectedScenario"].GetPromptText()</p>
            <form action='/scenarios/@Model["selectedScenario"].GetScenarioId()' method='post'>
              <input type="hidden" name="buttonVal" value="1" />
              <button class="animated bounceIn" type='submit' id="choice1" value=1>@Model["selectedScenario"].GetOpt1ChoiceText()</button>
            </form>
            <form action='/scenarios/@Model["selectedScenario"].GetScenarioId()' method='post'>
              <input type="hidden" name="buttonVal" value="2" />
              <button class="animated bounceIn" type='submit' id="choice2" value=2>@Model["selectedScenario"].GetOpt2ChoiceText()</button>
            </form>
            <form action='/scenarios/@Model["selectedScenario"].GetScenarioId()' method='post'>
              <input type="hidden" name="buttonVal" value="3" />
              <button class="animated bounceIn" type='submit' id="choice3" value=3>@Model["selectedScenario"].GetOpt3ChoiceText()</button>
            </form>
          </div>
          <br>
          <div class="col-md-12 previous-scenario-box">
            <p> Result <hr></p>
            <p>@Model["previousChoiceText"]</p>

            <form action='/player/@Model["currentPlayer"].GetName()/@Model["currentPlayer"].GetMoney()/end' method='post'>
              <button type='submit'>End the game!</button>
            </form>

          </div>

      </div>
    </div>
  </body>
</html>
